pipeline {
    agent any 
    stages {
        stage('Git Clone') {
            steps {
                git url: 'https://github.com/Kiritoblink/myfirst_finance_project', branch: 'master'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t kiritoblink/staragileprojectfinance:v1 .'
                    sh 'docker images'
                }
            }
        }
        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-pwd', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                    sh "echo \$PASS | docker login -u \$USER --password-stdin"
                }
                sh 'docker push kiritoblink/staragileprojectfinance:v1'
            }
        }
        stage('Deploy') {
            steps {
                sh 'sudo docker run -itd --name My-first-containe2211 -p 8083:80 kiritoblink/staragileprojectfinance:v1'
            }
        }
    }
}
